<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:padding="@dimen/spacing_large">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_skill_want_teach_btn"
        style="@style/StyleMaterialButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/know_label"
        android:textAllCaps="false"
        android:textColor="@color/grey_10"
        app:icon="@drawable/ic_arrow_upward_black_24dp"
        app:iconTint="@color/grey_10" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_skill_want_learn_btn"
        style="@style/StyleMaterialButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/want_learn_label"
        android:textAllCaps="false"
        android:textColor="@color/grey_10"
        app:icon="@drawable/ic_arrow_downward_black_24dp"
        app:iconTint="@color/grey_10" />

</LinearLayout>